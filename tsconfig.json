{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/types",
    "target": "esnext",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "types": ["vuetify"]
  },
  "include": ["**/*.js", "**/*.vue", "**/*.d.ts", "**/*.ts"],
  "exclude": ["node_modules", ".eodash", "public", "**/cache/**", "**/dist/**"]
}
